#:import Label kivy.uix.label.Label

<WindowManager>:
    MainWindow:
    CalendarWindow:
    GradesWindow:
    SpendingsWindow:
    ComparisonWindow:


<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        Label:
            text: "Witaj w Pomocniku Studenta!"
            font_size: 50

        GridLayout:
            cols: 4

            Button:
                text: "Kalendarz"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "left"

            Button:
                text: "Dziennik z ocenami"
                on_release:
                    app.root.current = "grades"
                    root.manager.transition.direction = "left"

            Button:
                text: "Kontroler wydatków"
                background_color: 0.2, 0.1, 0.7, 1
                on_release:
                    app.root.current = "spendings"
                    root.manager.transition.direction = "left"

            Button:
                text: "Porównywarka cen"
                on_release:
                    app.root.current = "comparison"
                    root.manager.transition.direction = "left"


<CalendarWindow>:
    name: "calendar"
    GridLayout:
        cols:1
        Label:
            text: "Listopad"
            text_size: 800, None
            halign: 'center'
            valign: 'center'
            font_size: 30
            size_hint:(None, None)
            markup: True
            size: self.texture_size
        GridLayout:
            cols: 7
            Label:
                text: "Poniedzialek"
            Label:
                text: "Wtorek"
            Label:
                text: "Sroda"
            Label:
                text: "Czwartek"
            Label:
                text: "Piatek"
            Label:
                text: "Sobota"
            Label:
                text: "Niedziela"

        Button:
            text: "Wróć do menu"
            size_hint: 1, 0.1
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<GradesWindow>:
    name: "grades"
    Button:
        text: "Wróć do menu"
        size_hint: 1, 0.1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<SpendingsWindow>:
    name: "spendings"
    Button:
        text: "Wróć do menu"
        size_hint: 1, 0.1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<ComparisonWindow>:
    name: "comparison"
    GridLayout
    Button:
        text: "Wróć do menu"
        size_hint: 1, 0.1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"





