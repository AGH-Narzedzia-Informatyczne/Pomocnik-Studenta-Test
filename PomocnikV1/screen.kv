
#:import Label kivy.uix.label.Label

<WindowManager>:
    MainWindow:
    CalendarWindow:
    GradesWindow:
    SpendingsWindow:
    ComparisonWindow:


<MainWindow>:
    name: "main"

    GridLayout:
        cols: 1
        Label:
            text: "Witaj w Pomocniku Studenta!"
            font_size: 50

        GridLayout:
            cols: 4

            Button:
                text: "Kalendarz"
                on_release:
                    app.root.current = "calendar"
                    root.manager.transition.direction = "left"

            Button:
                text: "Dziennik z ocenami"
                on_release:
                    app.root.current = "grades"
                    root.manager.transition.direction = "left"

            Button:
                text: "Kontroler wydatków"
                background_color: 0.2, 0.1, 0.7, 1
                on_release:
                    app.root.current = "spendings"
                    root.manager.transition.direction = "left"

            Button:
                text: "Porównywarka cen"
                on_release:
                    app.root.current = "comparison"
                    root.manager.transition.direction = "left"


